{
    "name": "V-Bunk",
    "description": "Attendance Calculator for VTOP",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon64.png",
        "128": "icon128.png"
    },
    "permissions": ["activeTab", "scripting"],
    "content_scripts": [
        {
            "matches": ["https://*.vit.ac.in/vtop/content"],
            "js": ["scripts/content.js"]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    }
}